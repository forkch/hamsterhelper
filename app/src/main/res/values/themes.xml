<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Inverse</item>
    </style>

    <style name="AppTheme.TranslucentActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Inverse.Transparent</item>
    </style>

    <style name="AppTheme.TranslucentActionBar.ActionBar" />

    <style name="AppTheme.TranslucentActionBar.ActionBar.Overlay">
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Inverse.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>


</resources>