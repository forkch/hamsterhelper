<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="Widget.AppCompat.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Buttons -->
    <style name="AppTheme.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/medium_textsize</item>
    </style>

    <style name="AppTheme.Button.Primary">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="AppTheme.Button.Secondary">
        <item name="android:background">@drawable/button_secondary</item>
    </style>

    <style name="AppTheme.Button.Alert">
        <item name="android:background">@drawable/button_secondary</item>
    </style>

    <style name="AppTheme.Button.Dark"></style>

</resources>
